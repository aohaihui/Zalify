<div class="giiker-help-text-container" style="background-color: {{ section.settings.background_color }}">
  <div class="giiker-help-text-title">{{ section.settings.title }}</div>
  <div class="giiker-help-text-background">
    {{
      section.settings.background_left_image
      | image_url: width: section.settings.background_left_image.width
      | image_tag: fetchpriority: 'high', loading: 'lazy', class: 'image-left-tag', data-cc-animate: 'fade-in'
    }}
    {{
      section.settings.background_right_image
      | image_url: width: section.settings.background_right_image.width
      | image_tag: fetchpriority: 'high', loading: 'lazy', class: 'image-right-tag', data-cc-animate: 'fade-in'
    }}
  </div>
  <div class="giiker-help-text-list">
    {% for block in section.blocks %}
      <div class="giiker-help-text-item help-text-item-{{forloop.index}}"
      data-cc-animate-delay="{{ forloop.index | times: 0.07 }}s"
      data-cc-animate="fade-in-up">
        <a href="{{ block.settings.url }}" target="_blank" class="giiker-help-text-item-content" >
          {% if block.settings.icon %}
            <div class="giiker-help-text-item-content-icon">
              {{ block.settings.icon | image_url: width: block.settings.icon.width | image_tag: fetchpriority: 'high', loading: 'lazy', class: 'image-tag' }}
            </div>
          {% endif %}
          <div class="giiker-help-text-item-title">{{ block.settings.title }}</div>
          <div class="giiker-help-text-item-detail">{{ block.settings.detail }}</div>
        </a>
      </div> 
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Giiker Help Text",
  "settings": [
    {
      "type": "richtext",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "rgba(255, 185, 87, 1)"
    },
    {
      "type": "image_picker",
      "id": "background_left_image",
      "label": "Background Left Image"
    },
    {
      "type": "image_picker",
      "id": "background_right_image",
      "label": "Background Right Image"
    }
  ],
  "blocks": [
    {
      "type": "list",
      "name": "List",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon" 
        },
        {
          "type": "url",
          "id": "url",
          "label": "URL"
        },
        {
          "type": "richtext",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "detail",
          "label": "Detail"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Giiker Help Text"
    }
  ]
}
{% endschema %}