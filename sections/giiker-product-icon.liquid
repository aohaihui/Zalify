<div class="giiker-home-list-image-container" style="">
  <div class="giiker-home-list-image-background">
    {{
    section.settings.background_image
    | image_url: width: section.settings.background_image.width
    | image_tag: height: section.settings.background_image.height,
      fetchpriority: 'high', loading: 'lazy', class: 'image-tag-background'
    }}
  </div>
  <div class="giiker-product-icon-list">
    {% for block in section.blocks %}
      <div class="giiker-product-icon-item" data-cc-animate="fade-in">
        <div class="giiker-product-icon-item-content" >
          <div class="giiker-product-icon-item-content-icon">
            <img src="{{ block.settings.icon | image_url: width: block.settings.icon.width }}" 
                 alt=""
                 class="image-tag"
                 data-cc-animate="fade-in"
                 loading="lazy"
                 width="{{ block.settings.icon.width }}"
                 height="{{ block.settings.icon.height }}">
          </div>
          <h2 class="giiker-product-icon-item-title">{{ block.settings.title }}</h2>
          <div class="giiker-product-icon-item-detail">{{ block.settings.detail }}</div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
<style>
  #shopify-section-{{ section.id }} {
    position: relative;
    background-color: {{ section.settings.background_color }}
  }
  .giiker-home-list-image-background-box{
    position: absolute;
    top: -120px;
    left: 0;
    z-index: 1111;
  }
  .giiker-home-list-image-background-box img{
    width: 200px;
    height: auto;
  } 
  @media screen and (max-width: 768px) {
    .giiker-home-list-image-background-box{
      top: -30px; 
    }
    .giiker-home-list-image-background-box img{
      width: 50px;
      height: auto;
    }
  }
</style>
{% schema %}
{
  "name": "Giiker Product Icon",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    }
  ],
  "blocks": [
    {
      "type": "list",
      "name": "List",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon" 
        },
        {
          "type": "richtext",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "detail",
          "label": "Detail"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Giiker Product Icon"
    }
  ]
}
{% endschema %}