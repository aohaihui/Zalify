                <path d="M15.1979 11.203C14.4918 10.4969 14.4918 9.35064 15.1979 8.64283C15.904 7.93675 17.0503 7.93675 17.7581 8.64283L24.3424 15.2272C25.0485 15.9333 25.0485 17.0796 24.3424 17.7874L17.7581 24.3717C17.052 25.0778 15.9057 25.0778 15.1979 24.3717C14.4918 23.6657 14.4918 22.5193 15.1979 21.8115L20.503 16.5081L15.1979 11.2048V11.203Z" fill="black"/>
                <path d="M23.0615 14.6972C24.061 14.6972 24.8724 15.5068 24.8724 16.5081C24.8724 17.5077 24.0628 18.3191 23.0615 18.3191H9.75639C8.75683 18.3191 7.94543 17.5094 7.94543 16.5081C7.94543 15.5086 8.7551 14.6972 9.75639 14.6972H23.0615Z" fill="black"/>
                </g>
                <defs>
                <clipPath id="clip0_629_196">
                <rect width="31.974" height="31.974" fill="white" transform="translate(0.421997 0.520279)"/>
                </clipPath>
                </defs>
              </svg> 
            </a>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Giiker Home Text Image",
  "settings": [
    
  ],
  "blocks": [
    {
      "type": "content",
      "name": "Content",
      "settings": [
        {
          "type": "checkbox",
          "id": "is_reversal",
          "label": "Is Reversal Content",
          "default": false
        },
        {
          "type": "richtext",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "detail",
          "label": "Detail"
        },
        {
          "type": "color",
          "id": "background_color",
          "label": "Background Color"
        },
        {
          "type": "image_picker",
          "id": "background_image",
          "label": "Background Image" 
        },
        {
          "type": "image_picker",
          "id": "pc_image",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Image"
        },
        {
          "type": "url",
          "id": "url",
          "label": "URL"
        },
        {
          "type": "text",
          "id": "url_label",
          "label": "URL Label",
          "default": "Discover More"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Giiker Home Text Image"
    }
  ]
}
{% endschema %}