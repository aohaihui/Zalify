<div class="giiker-home-text-image-container">
  <div class="giiker-home-text-image">
    {% for block in section.blocks %}
      <div class="giiker-home-text-image-item {% if block.settings.is_reversal %} reversal {% endif %}" data-cc-animate="fade-in">
        <div class="giiker-home-text-image-item-image" >
          {{
            block.settings.pc_image
            | image_url: width: block.settings.pc_image.width
            | image_tag: loading: 'eager', fetchpriority: 'high', decoding: 'async', class: 'pc-image'
          }}
          {{
            block.settings.mobile_image
            | image_url: width: block.settings.mobile_image.width
            | image_tag: fetchpriority: 'high', loading: 'lazy', class: 'mb-image'
          }}
        </div>
        <div class="giiker-home-text-image-item-content" style="background-color: {{ block.settings.background_color }}">
          <div class="giiker-home-text-image-item-content-background">
            {{
              block.settings.background_image
              | image_url: width: block.settings.background_image.width
              | image_tag: fetchpriority: 'high', loading: 'lazy', class: 'image-tag', data-cc-animate: 'fade-in'
            }}
          </div>
          <h2 class="giiker-home-text-image-item-title">{{ block.settings.title }}</h2>
          <div class="giiker-home-text-image-item-detail">{{ block.settings.detail }}</div>
          {% if block.settings.url != blank %}
            <a href="{{ block.settings.url }}" class="giiker-home-text-image-item-button">{{ block.settings.url_label }}
              <svg xmlns="http://www.w3.org/2000/svg" width="33" height="33" viewBox="0 0 33 33" fill="none">
