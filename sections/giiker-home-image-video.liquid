<section id="#{{ section.id }}">
  <div class="giiker-home-image-video">
    <div class="giiker-home-image">
      {{
        section.settings.pc_image
        | image_url: width: section.settings.pc_image.width
        | image_tag: height: section.settings.pc_image.height, 
        loading: 'eager', fetchpriority: 'high', decoding: 'async', class: 'image-tag', data-cc-animate: 'fade-in'
    }}
    </div>
    <div class="giiker-home-video">
      {{
      section.settings.video
      | video_url: autoplay: true, loop: true, controls: false, preload: "none"
      | video_tag: loading: 'eager', fetchpriority: 'high', decoding: 'async', class: 'video-tag', data-cc-animate: 'fade-in'
      }}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Giiker Home Image Video",
  "settings": [
    {
      "type": "image_picker",
      "id": "pc_image",
      "label": "Image"
    },
    {
      "type": "video_url",
      "id": "video",
      "label": "Video",
      "accept": ["youtube", "vimeo"],
      "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc"
    }
  ],
  "presets": [
    {
      "name": "Giiker Home Image Video"
    }
  ]
}
{% endschema %}