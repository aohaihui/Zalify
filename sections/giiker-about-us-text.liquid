<div class="giiker-about-us-text-container" style="background-color: {{ section.settings.background_color }};">
  <div class="giiker-about-us-text-content">
    {% if section.settings.title != blank %}
    <h2 class="giiker-about-us-text-title" data-cc-animate="fade-in">{{ section.settings.title }}</h2>
    {% endif %}
    {% if section.settings.detail != blank %}
    <div class="giiker-about-us-text-detail" data-cc-animate="fade-in">{{ section.settings.detail }}</div>
    {% endif %}
    {% if section.settings.image != blank %}
    <div class="giiker-about-us-text-image" data-cc-animate="fade-in">
      {{
      section.settings.image
      | image_url: width: section.settings.image.width
      | image_tag: height: section.settings.image.height,
        fetchpriority: 'high', loading: 'lazy', class: 'image-tag pc-image'
      }}
      {{
      section.settings.image_mobile
      | image_url: width: section.settings.image_mobile.width
      | image_tag: height: section.settings.image_mobile.height,
        fetchpriority: 'high', loading: 'lazy', class: 'image-tag mb-image'
      }}
    </div>
  {% endif %}
    {% if section.settings.detail_mobile != blank %}
    <div class="giiker-about-us-text-detail mobile-detail mb-image" data-cc-animate="fade-in">{{ section.settings.detail_mobile }}</div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Giiker about us text",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image 1920宽度"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Image Mobile 375宽度"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color "
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "detail",
      "label": "Detail"
    },
    {
      "type": "richtext",
      "id": "detail_mobile",
      "label": "Detail Mobile"
    }
  ],
  "presets": [
    {
      "name": "Giiker about us text"
    }
  ]
} 
{% endschema %}