<section id="#{{ section.id }}">
  <div class="giiker-home-banner">
    <div class="swiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="giiker-home-banner-item swiper-slide">
            {{
              block.settings.pc_image
              | image_url: width: block.settings.pc_image.width
              | image_tag: height: block.settings.pc_image.height, 
              loading: 'eager', 
                  fetchpriority: 'high',
                  decoding: 'async',
                  class: 'pc-image ',
               class: 'pc-image', data-cc-animate: 'fade-in'
          }}
          {{
              block.settings.mobile_image
              | image_url: width: block.settings.mobile_image.width
              | image_tag: height: block.settings.mobile_image.height, fetchpriority: 'high', loading: 'lazy', class: 'mb-image', data-cc-animate: 'fade-in'
          }}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>
<script>
  new Swiper('#{{ section.id }} .swiper', {
    slidesPerView: 'auto',
    centeredSlides: true,
    paginationClickable: true,
    spaceBetween: 30
  });
</script>
{% schema %}
{
  "name": "Giiker Home Banner",
  "settings": [],
  "blocks": [
    {
      "type": "banner",
      "name": "Banner",
      "settings": [
        {
          "type": "image_picker",
          "id": "pc_image",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Image"
        },
        {
          "type": "image_picker",
          "id": "tablet_image",
          "label": "Tablet Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Giiker Home Banner"
    }
  ]
}
{% endschema %}