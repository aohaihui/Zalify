<div class="giiker-home-banner" data-cc-animate="fade-in">
  <div class="swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="giiker-home-banner-item swiper-slide">
          {{
            block.settings.pc_image
            | image_url: width: block.settings.pc_image.width
            | image_tag: loading: 'eager', fetchpriority: 'high', decoding: 'async', class: 'pc-image'
        }}
        {{
            block.settings.mobile_image
            | image_url: width: block.settings.mobile_image.width
            | image_tag: fetchpriority: 'high', loading: 'lazy', class: 'mb-image'
        }}
        </div>
      {% endfor %}
    </div>
  </div>
</div>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const swiperProductFeatures = new Swiper('#shopify-section-{{ section.id }} .swiper', {
      slidesPerView: 'auto',
      centeredSlides: true,
      paginationClickable: true,
      loop: true,
      spaceBetween: 30
    });
  });
</script>
{% schema %}
{
  "name": "Giiker Home Banner",
  "settings": [],
  "blocks": [
    {
      "type": "banner",
      "name": "Banner",
      "settings": [
        {
          "type": "image_picker",
          "id": "pc_image",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Giiker Home Banner"
    }
  ]
}
{% endschema %}