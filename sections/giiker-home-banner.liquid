<div class="giiker-home-banner" data-cc-animate="fade-in">
  <div class="swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="giiker-home-banner-item swiper-slide">
          <img 
            src="{{ block.settings.pc_image | image_url: width: block.settings.pc_image.width }}" 
            alt="" 
            class="pc-image" 
            loading="eager"
            width="{{ block.settings.pc_image.width }}"
            height="{{ block.settings.pc_image.height }}"
          />
          <img 
            src="{{ block.settings.mobile_image | image_url: width: block.settings.mobile_image.width }}" 
            alt="" 
            class="mb-image" 
            loading="lazy"
            width="{{ block.settings.mobile_image.width }}"
            height="{{ block.settings.mobile_image.height }}"
          />
        </div>
      {% endfor %}
    </div>
  </div>
</div>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const swiperProductFeatures = new Swiper('#shopify-section-{{ section.id }} .swiper', {
      slidesPerView: 'auto',
      centeredSlides: true,
      paginationClickable: true,
      loop: true,
      spaceBetween: 30,
      breakpoints: {
        0: {
          spaceBetween: 15,
      slidesPerView: 'auto',
        },
        768: {
          slidesPerView: 30,
          slidesPerView: 'auto',


        }
      }
    });
  });
</script>
{% schema %}
{
  "name": "Giiker Home Banner",
  "settings": [],
  "blocks": [
    {
      "type": "banner",
      "name": "Banner",
      "settings": [
        {
          "type": "image_picker",
          "id": "pc_image",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Giiker Home Banner"
    }
  ]
}
{% endschema %}