<div class="giiker-contact-us-text-container" style="background-color: {{ section.settings.background_color }}">
  <div class="giiker-contact-us-text-title">{{ section.settings.title }}</div>
  <div class="giiker-contact-us-text-background">
    <img src="{{ section.settings.background_left_image | image_url: width: section.settings.background_left_image.width }}" 
         alt=""
         class="image-left-tag"
         data-cc-animate="fade-in"
         loading="lazy"
         width="{{ section.settings.background_left_image.width }}"
         height="{{ section.settings.background_left_image.height }}">
    <img src="{{ section.settings.background_right_image | image_url: width: section.settings.background_right_image.width }}" 
         alt=""
         class="image-right-tag"
         data-cc-animate="fade-in"
         loading="lazy"
         width="{{ section.settings.background_right_image.width }}"
         height="{{ section.settings.background_right_image.height }}">
  </div>
  <div class="giiker-contact-us-text-list">
    {% for block in section.blocks %}
      <div class="giiker-contact-us-text-item contact-us-text-item-{{forloop.index}}"
      data-cc-animate-delay="{{ forloop.index | times: 0.07 }}s"
      data-cc-animate="fade-in-up">
        <div class="giiker-contact-us-text-item-content" >
          {% if block.settings.icon %}
            <div class="giiker-contact-us-text-item-content-icon">
              <img src="{{ block.settings.icon | image_url: width: block.settings.icon.width }}" 
                   alt=""
                   class="image-tag"
                   loading="lazy"
                   width="{{ block.settings.icon.width }}"
                   height="{{ block.settings.icon.height }}">
            </div>
          {% endif %}
          <div class="giiker-contact-us-text-item-content-background">
            <img src="{{ block.settings.background_image | image_url: width: block.settings.background_image.width }}" 
                 alt=""
                 class="image-tag"
                 loading="lazy"
                 width="{{ block.settings.background_image.width }}"
                 height="{{ block.settings.background_image.height }}">
          </div>
          <div class="giiker-contact-us-text-item-detail">{{ block.settings.detail }}</div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Giiker Contact Us Text",
  "settings": [
    {
      "type": "richtext",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "rgba(255, 185, 87, 1)"
    },
    {
      "type": "image_picker",
      "id": "background_left_image",
      "label": "Background Left Image"
    },
    {
      "type": "image_picker",
      "id": "background_right_image",
      "label": "Background Right Image"
    }
  ],
  "blocks": [
    {
      "type": "list",
      "name": "List",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon" 
        },
        {
          "type": "image_picker",
          "id": "background_image",
          "label": "Background Image" 
        },
        {
          "type": "liquid",
          "id": "detail",
          "label": "Detail"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Giiker Contact Us Text"
    }
  ]
}
{% endschema %}