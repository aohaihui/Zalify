<div id="shopify-section-home_slideshow" class="shopify-section mount-slideshow mount-images  "
 >
  <div id="section-home_slideshow" class="site-box-container container--fullscreen pc-image">
    <div class="site-box box--bigger box--center-align box--column-flow box--no-padding box__slideshow-split active back-to-normal "
      style="height: auto;">
      <div class="site-box-content responsive-flickity ">
        {% for block in section.blocks %}
          <div class="slideshow-item {% if block.settings.is_reversal %} reversal {% endif %}">
            <div class="site-box box--big box--center-align box--column-flow box__slideshow-item active"  style="background-color: {{ block.settings.background_color }};">
              <div class="site-box-content fix-me-with-margin" style="--background-color: {{ block.settings.text_color }};">
                <h3 class="title custom-underline inline" style="color: {{ block.settings.title_color }};" >{{ block.settings.title }}</h3>
                <p class="caption" style="color: {{ block.settings.detail_color }};" >{{ block.settings.detail }}</p>
              </div>
              <div class="site-box-background-container">
                <div class="active" >
                  <span class="site-box-background with-image" aria-hidden="true">
                    <img src="{{ block.settings.image | img_url: 'master' }}"
                      srcset="{{ block.settings.image | img_url: 'master' }} 1x, {{ block.settings.image | img_url: 'master' | replace: '_1x.', '_2x.' }} 2x"
                     data-srcset="{{ block.settings.image | img_url: 'master' }} 1x, {{ block.settings.image | img_url: 'master' | replace: '_1x.', '_2x.' }} 2x"
                     data-sizes="auto" class="lazyautosizes lazyloaded" sizes="{{ block.settings.image.width }}px"
                      alt="{{ block.settings.title }}" width="{{ block.settings.image.width }}" height="{{ block.settings.image.height }}">
                  </span>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>

  </div>
  {% comment %} <div class="section-home_slideshow-swiper mb-image">
    <div class="swiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <div class="box">
              <h3 class="title custom-underline inline" >{{ block.settings.title }}</h3>
              <p class="caption" >{{ block.settings.detail }}</p>
            </div>
            <div class="image-tag">
              {{ block.settings.image | image_url: width: block.settings.image.width | image_tag: height: block.settings.image.height, fetchpriority: 'high', loading: 'lazy', class: 'image-tag' }}
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="swiper-pagination"></div>
    </div>
  </div> {% endcomment %}
  <div class="section-home_slideshow-swiper-mobile swiper  mb-image" style="flex-direction: column;">
    <div class="swiper-wrapper">
    {% for block in section.blocks %}
      <div class="section-home_slideshow-swiper-mobile-item swiper-slide" style="background-color: {{ block.settings.background_color }};">
        <div class="image-tag">
          {{ block.settings.mobile_image | image_url: width: block.settings.mobile_image.width | image_tag: height: block.settings.mobile_image.height, fetchpriority: 'high', loading: 'lazy', class: 'image-tag' }}
        </div>
        <div class="content" >
          <div class="content-background" style="background-color: {{ block.settings.text_color }};">
            <div class="box-title" style="color: {{ block.settings.title_color }}; ">{{ block.settings.title }}</div>
            <div class="box-detail" style="color: {{ block.settings.detail_color }};">{{ block.settings.detail }}</div>
            </div>
        </div>
      </div>
    {% endfor %}
    </div>
    <div class="swiper-pagination"></div>
  </div> 




</div>
<style type="text/css"> 
@media screen and (min-width: 768px),
screen and (min-width: 1024px) and (orientation: landscape) {

  .shopify-section .site-box.box__slideshow-split .slideshow-item .site-box {
    background: #ece6de;
    color: #040a2b;
  }

  .shopify-section .site-box.box__slideshow-split .slideshow-item .site-box .button {
    background: #040a2b !important;
    color: #ece6de !important;
  }

  .shopify-section .site-box.box__slideshow-split .slideshow-item .site-box .button svg path {
    fill: #ece6de !important;
  }

  .shopify-section .site-box.box__slideshow-split .slider-meta {
    color: #040a2b;
  }

  .shopify-section .site-box.box__slideshow-split .slider-meta svg polygon {
    fill: #040a2b !important;
  }

}
</style>
<script>
  (function() {
    // 为每个 section 实例创建独立作用域
    let swiperProductRollerInstance = null;
    
    function initSwiperProductRoller() {
      // 检查 Swiper 库是否已加载
      if (typeof Swiper === 'undefined') {
        setTimeout(initSwiperProductRoller, 100);
        return;
      }
      
      // 只在移动端（屏幕宽度小于 768px）初始化
      if (window.innerWidth < 768) {
        if (!swiperProductRollerInstance) {
          swiperProductRollerInstance = new Swiper('#shopify-section-{{ section.id }} .swiper', {
            slidesPerView: 1,
            spaceBetween: 20,
            pagination: {
              el: '#shopify-section-{{ section.id }} .swiper-pagination',
              clickable: true,
            },
          });
        }
      } else {
        // 桌面端销毁 Swiper 实例（如果存在）
        if (swiperProductRollerInstance) {
          swiperProductRollerInstance.destroy(true, true);
          swiperProductRollerInstance = null;
        }
      }
    }
    
    // 监听窗口大小变化
    window.addEventListener('resize', function() {
      initSwiperProductRoller();
    });
    
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initSwiperProductRoller);
    } else {
      initSwiperProductRoller();
    }
  })();
</script>
